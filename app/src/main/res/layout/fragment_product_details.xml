<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:id="@+id/rootview_rl">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
                android:id="@+id/product_details_sv" android:layout_above="@+id/bottom_view">
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                      android:orientation="vertical">
            <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/viewpager_fl">

                <androidx.viewpager.widget.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_200sdp"/>

                <ImageButton
                        android:id="@+id/left_nav"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_vertical|left"
                        android:background="@color/color_transparent"
                        android:src="@drawable/ic_my_accounts_side_arrow_icon"/>

                <ImageButton
                        android:id="@+id/right_nav"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center_vertical|right"
                        android:background="@color/color_transparent"
                        android:src="@drawable/ic_my_accounts_side_arrow_icon"/>

            </FrameLayout>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_below="@+id/viewpager_fl"
                          android:layout_margin="@dimen/_10sdp">

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:id="@+id/description_rl"
                              android:layout_weight="6.5"


                              android:orientation="vertical">
                    <LinearLayout android:layout_width="wrap_content" android:layout_height="match_parent"
                                  android:orientation="vertical">
                        <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                                    android:layout_height="wrap_content"
                                                                                    android:text="Product 15"
                                                                                    android:textStyle="bold"/>

                        <LinearLayout android:layout_width="@dimen/_150sdp" android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_marginTop="@dimen/_10sdp">
                            <View android:layout_width="@dimen/_2sdp" android:layout_height="@dimen/_50sdp"
                                  android:background="@color/colorPrimary"/>
                            <LinearLayout android:layout_width="wrap_content" android:layout_height="@dimen/_50sdp"
                                          android:background="@color/upgrade_wallet_parent_background"
                                          android:orientation="vertical" android:padding="@dimen/_5sdp"
                                          android:gravity="center">
                                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Special Launch Price"/>
                                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="14h : 40m : 22s"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                              android:layout_weight="3.5"
                              android:orientation="vertical"
                              android:gravity="right"
                              android:layout_marginLeft="@dimen/_5sdp"
                              android:layout_marginTop="@dimen/_10sdp">
                    <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                                android:layout_height="wrap_content"
                                                                                android:text="Rs 259"/>
                    <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                                android:layout_height="wrap_content"
                                                                                android:text="48% OFF"
                                                                                android:textColor="@color/wallet_amount_txt_color"/>
                    <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                                android:layout_height="wrap_content"
                                                                                android:text="Inclusive of all taxes"
                                                                                android:gravity="right"/>
                </LinearLayout>


            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="@dimen/_1sdp"
                  android:background="@color/bar_bg_color"/>
            <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                        android:layout_height="wrap_content"
                                                                        android:text="Size"
                                                                        android:textSize="@dimen/_14sdp"
                                                                        android:textStyle="bold"
                                                                        android:layout_margin="@dimen/_10sdp"/>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:layout_marginLeft="@dimen/_10sdp"
                          android:layout_marginBottom="@dimen/_10sdp">
                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                            android:layout_height="wrap_content"
                                                                            android:background="@drawable/rounded_circle"
                                                                            android:text="S"
                                                                            android:gravity="center"
                                                                            android:layout_marginRight="@dimen/_5sdp"
                                                                            android:padding="@dimen/_15sdp"/>
                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                            android:layout_height="wrap_content"
                                                                            android:background="@drawable/rounded_circle"
                                                                            android:text="M"
                                                                            android:gravity="center"
                                                                            android:layout_marginRight="@dimen/_5sdp"
                                                                            android:padding="@dimen/_15sdp"/>
                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                            android:layout_height="wrap_content"
                                                                            android:background="@drawable/rounded_circle"
                                                                            android:text="L"
                                                                            android:gravity="center"
                                                                            android:layout_marginRight="@dimen/_5sdp"
                                                                            android:padding="@dimen/_15sdp"/>
                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                            android:layout_height="wrap_content"
                                                                            android:background="@drawable/rounded_circle"
                                                                            android:text="XL"
                                                                            android:gravity="center"
                                                                            android:layout_marginRight="@dimen/_5sdp"
                                                                            android:padding="@dimen/_15sdp"/>
            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="@dimen/_1sdp"
                  android:background="@color/bar_bg_color"/>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                          android:orientation="vertical" android:layout_margin="@dimen/_10sdp">
                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                            android:layout_height="wrap_content"
                                                                            android:text="Description"
                                                                            android:textSize="@dimen/_14sdp"
                                                                            android:textStyle="bold"/>
                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="match_parent"
                                                                            android:layout_height="wrap_content"
                                                                            android:paddingTop="@dimen/_10sdp"
                                                                            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book."/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal" android:layout_gravity="bottom"
                  android:layout_margin="@dimen/_10sdp"
                  android:background="@color/white"
                  android:padding="@dimen/_5sdp"
                  android:id="@+id/bottom_view"
                  android:layout_alignParentBottom="true">
        <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="0dp"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_weight="1"
                                                                    android:text="ADD TO WISHLIST"
                                                                    android:padding="@dimen/_10sdp"
                                                                    android:gravity="center"
                                                                    android:layout_marginRight="@dimen/_5sdp"
                                                                    android:background="@drawable/button_rect_drawable"/>

        <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="0dp"
                                                                    android:layout_height="wrap_content"
                                                                    android:layout_weight="1"
                                                                    android:text="ADD TO BAG"
                                                                    android:padding="@dimen/_10sdp"
                                                                    android:gravity="center"
                                                                    android:textColor="@color/white"
                                                                    android:layout_marginLeft="@dimen/_5sdp"
                                                                    android:background="@drawable/button_rect_fill_drawable"/>
    </LinearLayout>
</RelativeLayout>