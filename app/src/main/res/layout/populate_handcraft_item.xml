<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/parent_item_rl">

        <androidx.cardview.widget.CardView android:layout_width="@dimen/_120sdp"
                                           android:layout_height="@dimen/_120sdp"
                                           android:layout_margin="@dimen/_20sdp"
                                           app:cardCornerRadius="@dimen/_5sdp">

            <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                       android:src="@drawable/latest_edition"
                       android:scaleType="fitXY"
                       android:id="@+id/latest_item_iv"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/fav_iv"
                           android:src="@drawable/ic_contact_list_favorite_icon_selected"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_5sdp"/>
            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="#66000000"
                            android:orientation="vertical"
                            android:visibility="visible">

                <com.ancient.ancient_handcraft.app.widget.AppCustomTextView android:layout_width="wrap_content"
                                                                            android:layout_height="wrap_content"
                android:text="@string/latest_product"
                android:padding="@dimen/_5sdp"
                android:background="@color/color_transparent"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:id="@+id/item_name_tv"/>
            </RelativeLayout>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>

</LinearLayout>