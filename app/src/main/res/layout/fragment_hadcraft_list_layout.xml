<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:background="@color/white">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:gravity="center"
    android:layout_marginTop="@dimen/_20sdp">
        <com.ancient.ancient_handcraft.app.widget.AppCustomTextView
                android:id="@+id/tv_login_or"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="@string/latest_product"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_14sdp"/>

        <View
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_1sdp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/_10sdp"
                android:background="@color/colorPrimary"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                               android:layout_height="match_parent"
                                               android:layout_marginTop="@dimen/_5sdp"
                                               android:id="@+id/handcraft_item_rv">

    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>