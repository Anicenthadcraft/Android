<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/main_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/nav_drawer_item_iv"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_dashboard_shopping_icon" />

        <com.ancient.ancient_handcraft.app.widget.AppCustomTextView
            android:id="@+id/nav_drawer_item_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@+id/nav_drawer_item_iv"
            android:paddingLeft="@dimen/_5sdp"
            android:text="shoping"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:id="@+id/home_product_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:paddingRight="@dimen/_15sdp"
            android:visibility="gone"
            android:src="@drawable/ic_dashboard_shopping_icon" />
    </RelativeLayout>

    <View
        android:id="@+id/underline_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_gravity="center"
        android:layout_below="@+id/main_ll"
        android:background="@color/upgrade_wallet_parent_background"
        android:visibility="visible"></View>
</RelativeLayout>